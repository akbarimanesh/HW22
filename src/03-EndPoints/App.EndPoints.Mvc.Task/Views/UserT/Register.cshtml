@using App.Domain.Core.Entities
@using App.Domain.Core.Task.UserT

@model RegisterViewModel
<div class="page">
   
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <form class="register-form" method="post" asp-action="Register">

        <img src="~/pic/logo.png" alt="logo">
        <h4>ثبت نام </h4><br>


        <input placeholder="نام کاربری" type="text" asp-for="Username" ><br>
        <span class="text-danger" asp-validation-for="Username"></span>
        <input placeholder="ایمیل" type="text" asp-for="Email"><br>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input placeholder="رمز عبور" type="password" asp-for="Password" ><br>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input placeholder="تکرار رمز عبور" type="password" asp-for="ConfirmPassword"><br><br>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        <button type="send" class="register-btn">ثبت نام</button>

        
    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


